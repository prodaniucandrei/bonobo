<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bonobo.Views.AddActivityPage">
    <ContentPage.Content>

        <StackLayout VerticalOptions="CenterAndExpand" Padding="5">
            <StackLayout VerticalOptions="Start">
                <Entry Placeholder="what do you reflect on?"></Entry>
                <Entry Placeholder="how many people are you looking for?"></Entry>
            </StackLayout>
            <StackLayout VerticalOptions="End">
                <Label Text="what category does it fit in?"></Label>
                <Picker x:Name="Picker_Category" HorizontalOptions="FillAndExpand">
                    <Picker.Items>
                        <x:String>Astronomy</x:String>
                        <x:String>Books</x:String>
                        <x:String>Technology</x:String>
                        <x:String>Travel</x:String>
                    </Picker.Items>
                </Picker>
                <Label Text="when?"></Label>
                <DatePicker></DatePicker>
                <Label Text="what else do you want to say about it?"></Label>
                <Editor></Editor>
            </StackLayout>
            <Button Text="Publish"></Button>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>